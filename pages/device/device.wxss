
page {
  height: 100%;
}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
}

.main {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.label-container {
  display: flex;
  width: 100%;
  flex-direction: row;
}

.single-label-container {
  flex: 1;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.label-title {
  color: #693210;
  line-height: 20px;
  text-align: center;
  font-size: 15px;
}

.label-data {
  margin: 5px;
  color: #693210;
  line-height: 30px;
  text-align: center;
  font-size: 25px;
}

.label-style {
  width: 50px;
  height: 50px;
}

.sound-style {
  width: 200px;
  height: 200px;
}

.pic-container {
  margin-top: 300rpx;
  width: 200px;
  height: 200px;
}

.dialog{
  margin-top: -20px;
  position: absolute;
  width: 150px;
  background-color: #f1d8a7;
  padding: 10px;
  border-radius:6px;
  z-index: 2;
  font-size: 15px;
}
